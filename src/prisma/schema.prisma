generator client {
  provider = "prisma-client"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  id   String @id @default(cuid(2))
  name String @unique
  slug String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subjects Subject[]
}

model Subject {
  id              String    @id @default(cuid(2))
  name            String    @unique
  icon            String
  slug            String    @unique
  examDate        DateTime?
  examLength      String?
  examDescription String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classId String
  class   Class  @relation(fields: [classId], references: [id])

  ressources Ressource[]
}

model Ressource {
  id           String        @id @default(cuid(2))
  title        String
  description  String?
  resourceType RessourceType
  textContent  String?
  fileUrl      String?
  mimeType     String?
  type         Type

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])
}

enum RessourceType {
  TEXT
  DOCUMENT
  IMAGE
  OTHER
}

enum Type {
  COURSE
  REVISION
  OTHER
}
