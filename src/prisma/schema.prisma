generator client {
  provider = "prisma-client"
  output   = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Class {
  id   String @id @default(cuid(2))
  name String @unique
  slug String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subjects Subject[]
}

model Subject {
  id              String    @id @default(cuid(2))
  name            String    @unique
  icon            String
  slug            String    @unique
  examDate        DateTime?
  examLength      String?
  examDescription String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  classId String
  class   Class  @relation(fields: [classId], references: [id])

  ressources Ressource[]
}

model Ressource {
  id           String        @id @default(cuid(2))
  authorId     String
  author       User          @relation(fields: [authorId], references: [id])
  title        String
  description  String?
  resourceType RessourceType
  textContent  String?
  fileUrl      String?
  mimeType     String?
  type         Type

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  subjectId String
  subject   Subject @relation(fields: [subjectId], references: [id])
}

enum RessourceType {
  TEXT
  DOCUMENT
  IMAGE
  OTHER
}

enum Type {
  COURSE
  REVISION
  OTHER
}

model User {
  id            String      @id
  role          Role     @default(STUDENT)
  name          String
  email         String
  emailVerified Boolean     @default(false)
  image         String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @default(now()) @updatedAt
  sessions      Session[]
  accounts      Account[]
  ressources    Ressource[]

  @@unique([email])
  @@map("user")
}

enum Role {
  ADMIN
  PROFESSOR
  MODERATOR
  STUDENT
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}
